<h1>Edit Categories</h1>

<div class="col-sm-4">

  <form action="/admin/categories/edit/{{category.id}}?_method=PUT" method="post">
    <div class="form-group">
      <label for="name">Name</label>
      <input value="{{category.name}}" class="form-control" name="name" type="text" placeholder="Enter title"/>
    </div>
    <button class="btn btn-primary" type="submit">Update Category</button>
  </form>
</div>
