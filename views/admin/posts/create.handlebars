<h1>Create Post</h1>
<form class="" action="/admin/posts/create" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Title</label>
    <input class="form-control" name="title" id="title" type="text" placeholder="Enter Title" required/>
  </div>
  <div class="form-group">
    <label for="file">File Upload</label>
    <input class="form-control" name="file" id="file" type="file" />
  </div>

  <div class="form-group">
    <label for="status">Category</label>
    <select class="form-control" name="category" id="status">
      {{#each categories}}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="status">Status</label>
    <select class="form-control" name="status" id="status" required>
      <option value="public">Public</option>
      <option value="private">Private</option>
      <option value="draft">Draft</option>
    </select>
  </div>
  <div class="form-check">
      <label class="form-check-label"for="allowComments">
        <input class="form-check-input" name="allowComments" id="allowComments" type="checkbox">
          Allow Comments
      </label>
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    <textarea class="form-control" name="body" type="text" placeholder="Enter Description" cols="30" rows="10" required></textarea>
  </div>
  <a class="btn btn-danger" href="/admin/posts">Cancel</a>
  <a class="btn btn-info" href="/admin/posts/create">Reset</button></a>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
