<h1>Edit Post</h1>
<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Title</label>
    <input class="form-control" name="title" id="title" type="text" placeholder="Enter Title" value="{{post.title}}">
  </div>
  <div class="form-group">
    <label for="file">File Upload</label>
    <input class="form-control" name="file" id="file" type="file"/>
  </div>

  <div class="form-group">
    <label for="status">Category</label>
    <select class="form-control" name="category" id="status">
      {{#select post.category}}
        {{#each categories}}
          <option value="{{id}}">{{name}}</option>
        {{/each}}
      {{/select}}
    </select>
  </div>

  <div class="form-group">
    <label for="status">Status</label>
    <select class="form-control" name="status" id="status">
      {{#select post.status}}
        <option value="public">Public</option>
        <option value="private">Private</option>
        <option value="draft">Draft</option>
      {{/select}}
    </select>
  </div>
  <div class="form-check">
      <label class="form-check-label" for="allowComments">
        <input class="form-check-input" name="allowComments" id="allowComments" type="checkbox" {{#if post.allowComments}} checked="checked" {{/if}}>
          Allow Comments
      </label>
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    <textarea class="form-control" name="body" type="text" placeholder="Enter Description" cols="30" rows="10">{{post.body}}</textarea>
  </div>

  <button class="btn btn-primary" type="submit">Submit</button>
</form>
